<div class="banner index">
  <div class="container">
    <h1>Save any kind of movie</h1>
  </div>
</div>
<div class="container py-5">
  <div class="d-flex align-items-center justify-content-between border-bottom">
    <h2>My lists</h2>
    <%= link_to "Add a list", new_list_path, class: "btn btn-dark" %>
  </div>
  <div class="cards py-5">
    <% @lists.each do |list| %>
     <div class="card-category"
          <% if list.photo.attached? %>
            style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path list.photo.key %>')"
          <% end %>
          >
        <%= link_to list.name, list_path(list) %>
        <%= link_to list_path(list), data: { turbo_method: :delete, turbo_confirm: "Are you sure?"}, class: "close" do %>
          <span>Ã—</span>
          <p>Delete</p>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
