<div class="banner index">
  <div class="container">
    <h1>Save any kind of movie</h1>
  </div>
</div>
<div class="container py-5">
  <div class="d-flex align-items-center justify-content-between border-bottom">
    <h2>My lists</h2>
    <%= link_to "Add a list", new_list_path, class: "btn btn-dark" %>
  </div>
  <div class="cards py-5">
    <% @lists.each do |list| %>
      <%= link_to list_path(list) do %>
        <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= list.image_url %>)">
          <%= list.name %>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
